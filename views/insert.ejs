<html>
<head>
	<title>In-bounding Schedule</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link href="/static/assets/third-party/semantic.min.css" rel="stylesheet" type="text/css" />
	<link href="/static/assets/third-party/jquery.datetimepicker.min.css" rel="stylesheet" type="text/css" />
	<link href="/static/assets/css/styles.css" rel="stylesheet" type="text/css" />
</head>
<body>
	<div class="ui basic center aligned segment container">
		<h1 class="ui blue header inverted">
			APP
		</h1>
	</div>

	<div class="iphone-frame">
		<div class="inner-frame">
			<div class="embedded-button">
				<a class="ui red button" type="button" id="open-confirm-button">
					<i class="icon calendar alternate"></i>
					Add Schedule!
				</a>
			</div>
		</div>

		<div class="inner-frame ui transition hidden" id="confirm">
			<div class="title">
				<h4 class="ui blue header inverted">
					SCHEDULE APP
				</h4>
			</div>

			<div class="ui container">
				<form class="ui padded form" onsubmit="return;">
					<input type="hidden" name="title" value="<%= query.title %>" />
					<input type="hidden" name="startDate" value="<%= query.startDate %>" />
					<input type="hidden" name="url" value="<%= query.url %>" />
					<input type="hidden" name="location" value="<%= query.location %>" />
					<input type="hidden" name="description" value="<%= query.description %>" />
				</form>
			</div>

			<div id="confirm-wrapper">
				<div id="confirm-scroller">
					<div class="ui container">
						<div class="ui basic segment">
							<div class="ui hidden divider"></div>

							<div class="ui icon center aligned green inverted header">
								<i class="calendar check icon"></i>
								Add Schedule
							</div>

							<table class="ui definition inverted table">
								<caption>
									Confirm the Schedule URL.
									<div class="ui divider"></div>
								</caption>
								<tbody>
									<tr>
										<td class="collapsing">Title</td>
										<td><%= query.title %></td>
									</tr>
									<tr>
										<td class="collapsing">Date</td>
										<td><%= query.startDate %></td>
									</tr>
									<% if(query.url != ""){ %>
										<tr>
											<td class="collapsing">URL</td>
											<td><%= query.url %></td>
										</tr>
									<% } %>
									<% if(query.location != ""){ %>
										<tr>
											<td class="collapsing">Location</td>
											<td><%= query.location %></td>
										</tr>
									<% } %>
									<% if(query.description != ""){ %>
										<tr>
											<td class="collapsing">Description</td>
											<td id="description"><%= query.description %></td>
										</tr>
									<% } %>
								</tbody>
							</table>

							<div class="actions">
								<div class="ui green ok inverted fluid button" id="add-button">
									<i class="checkmark icon"></i>
									Add Schedule
								</div>
								<div class="ui red basic cancel inverted fluid button" id="close-button">
									<i class="remove icon"></i>
									Close without Adding the schedule
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="http://code.jquery.com/jquery-1.12.3.min.js" integrity="sha256-aaODHAgvwQW1bFOGXMeX+pC4PZIPsvn2h1sArYOhgXQ=" crossorigin="anonymous"></script>
	<script src="/static/assets/third-party/semantic.min.js"></script>
	<script src="/static/assets/third-party/jquery.serializejson.min.js"></script>
	<script src="/static/assets/third-party/iscroll.js"></script>
	<script src="/static/assets/js/insert.js"></script>
</body>
</html>